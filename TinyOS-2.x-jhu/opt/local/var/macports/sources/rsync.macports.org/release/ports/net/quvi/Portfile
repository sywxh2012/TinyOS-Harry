                    sha256  97e06e3f7f856458355f979459636cd2dce2c265075ff442f23afaf333b074d0

configure.cppflags  -I${worksrcpath}/include -I${prefix}/include

livecheck.regex     ${name}-(\\d+(\\.\\d+)+)
